@model Clases
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<form asp-action="Edit">
    <div class="form-group row">
        <label for="clave">Clave</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Clave" asp-for="Clave" />
        </div>
    </div>
    <div class="form-group row">
        <label for="profesor">Profesor</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Profesor" asp-for="Profesor" />
        </div>
    </div>
    <div class="form-group row">
        <label for="cupo">Cupo</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Cupo" asp-for="Cupo" />
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <div class="col-sm-10">
            <button type="reset" class="btn btn-danger" action="~/Home">Cancelar</button>
        </div>
    </div>
</form>